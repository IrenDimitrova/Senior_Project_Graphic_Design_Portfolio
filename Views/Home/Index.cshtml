@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}

<div class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1>Welcome to<br /><span class="highlight">Hive<br />Portfolios</span></h1>
            <p>Explore stunning graphic design portfolios</p>
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-join">Join Now</a>
        </div>
        <div class="hero-image">
            <img src="/project-images/hero-hi-logo.png" alt="Hive Portfolios Graphic" class="hero-logo-img" />
        </div>
    </div>
</div>


<div class="features-section">
    <div class="features-content">
        <h2>Where Creativity Meets Opportunity</h2>
        <div class="features-description">
            <p class="welcome">Welcome to HivePortfolios, where creativity meets connectivity.</p>
            <p class="platform">Our platform empowers graphic designers to showcase their masterpieces, manage their work seamlessly, and connect with a vibrant community that values artistic vision.</p>
            <p class="target">Whether you're a seasoned designer seeking to expand your professional network or an art enthusiast eager to discover and support exceptional talent,HivePortfolios is your go-to destination.</p>
            <p class="dive">Dive into a world where design thrives, feedback flows freely, and opportunities blossom.</p>
            <p class="join">Join us to explore stunning portfolios, foster meaningful collaborations, and celebrate creativity at its best.</p>
        </div>
    </div>
</div>

<div class="features-grid-section">
    <h2>Why Choose HivePortfolios?</h2>
    <div class="features-grid">
        <img src="/project-images/features-complete-structure.png" alt="Features Structure" class="structure-image">
        <div class="grid-content">
            <!-- Top items -->
            <div class="feature-item position-1">
                <img src="/project-images/folder.svg" alt="Portfolio" class="feature-icon">
                <h3>Portfolio<br>Management</h3>
            </div>
            <div class="feature-item position-2">
                <img src="/project-images/lock.svg" alt="Security" class="feature-icon">
                <h3>Secure User<br>Authentication</h3>
            </div>

            <!-- Middle items -->
            <div class="feature-item position-3">
                <img src="/project-images/chart.svg" alt="Insights" class="feature-icon">
                <h3>Detailed Project<br>Insights</h3>
            </div>
            <div class="feature-item position-4">
                <img src="/project-images/users.svg" alt="Community" class="feature-icon">
                <h3>Community<br>Engagement</h3>
            </div>

            <!-- Bottom items -->
            <div class="feature-item position-5">
                <img src="/project-images/magnifier.svg" alt="Discovery" class="feature-icon">
                <h3>Enhanced<br>Discovery & Visibility</h3>
            </div>
            <div class="feature-item position-6">
                <img src="/project-images/dashboard.svg" alt="Dashboard" class="feature-icon">
                <h3>Designer<br>Dashboard</h3>
            </div>
        </div>
    </div>
</div>

<div class="showcase-section">
    <div class="showcase-content">
        <h2>Showcase Your Design Expertise</h2>
        <p class="subtitle">Upload your work across four professional design categories. Build a comprehensive portfolio that demonstrates your skills and attracts potential clients.</p>

        <div class="design-categories">
            <!-- Print Design -->
            <div class="category-item">
                <img src="/project-images/print-design.svg" alt="Print Design" class="category-icon">
                <div class="category-text">
                    <h3>Print Design</h3>
                    <p>Showcase your traditional print media designs and marketing materials</p>
                </div>
            </div>

            <!-- Branding Design -->
            <div class="category-item">
                <img src="/project-images/branding-design.svg" alt="Branding Design" class="category-icon">
                <div class="category-text">
                    <h3>Branding Design</h3>
                    <p>Present complete brand identity systems and visual guidelines</p>
                </div>
            </div>

            <!-- Digital Design -->
            <div class="category-item">
                <img src="/project-images/digital-design.svg" alt="Digital Design" class="category-icon">
                <div class="category-text">
                    <h3>Digital Design</h3>
                    <p>Display your digital media and interface design projects</p>
                </div>
            </div>

            <!-- 3D Design -->
            <div class="category-item">
                <img src="/project-images/3d-design.svg" alt="3D Design" class="category-icon">
                <div class="category-text">
                    <h3>3D Design</h3>
                    <p>Showcase your traditional print media designs and marketing materials</p>
                </div>
            </div>
        </div>

        <div class="button-container">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-start">Start Building Your Portfolio →</a>
        </div>
    </div>
</div>