@{
    ViewData["Title"] = "About - Hive Portfolios";
}

<div class="about-hero">
    <div class="about-hero__content">
        <div class="about-hero__left">
            <div class="about-hero__hexagon">
                <div class="about-hero__hexagon-text">
                    <h2>About</h2>
                    <h3>Hive Portfolios</h3>
                </div>
            </div>
        </div>
        <div class="about-hero__right">
            <h1 class="about-hero__heading">
                Empowering<br>
                Graphic Designers<br>
                Worldwide
            </h1>
            <p class="about-hero__description">
                HivePortfolios is building the future of graphic design portfolios,
                connecting talented designers with opportunities and fostering a
                community of creative excellence.
            </p>
        </div>
    </div>
</div>



<div class="about-numbers">
    <div class="about-numbers__content">
        <div class="stat-item">
            <div class="number">10 000+</div>
            <div class="label">Active<br>Designers</div>
        </div>

        <div class="stat-item">
            <div class="number">15 300+</div>
            <div class="label">Projects<br>Hosted</div>
        </div>

        <div class="stat-item">
            <div class="number">12 300+</div>
            <div class="label">Successful<br>Client Matches</div>
        </div>

        <div class="stat-item">
            <div class="number">4.8/5.0</div>
            <div class="label">User<br>Rating</div>
        </div>
    </div>
</div>


<div class="about-mission">
    <div class="about-mission__content">
        <h2>Our Mission</h2>
        <p class="mission-statement">
            To revolutionize how graphic designers showcase their work and connect with
            opportunities. We're building more than a portfolio platform – we're creating a
            thriving ecosystem where creativity meets opportunity.
        </p>

        <div class="mission-features">
            <div class="feature">
                <img src="/project-images/users.svg" alt="Community" class="feature-icon" />
                <div class="feature-text">
                    <h3>Community-Driven</h3>
                    <p>
                        We believe in the power of community feedback and collaboration. Our platform
                        encourages designers to share insights, provide constructive feedback, and grow together.
                    </p>
                </div>
            </div>

            <div class="feature">
                <img src="/project-images/chart.svg" alt="Growth" class="feature-icon" />
                <div class="feature-text">
                    <h3>Professional Growth</h3>
                    <p>
                        We're committed to helping designers advance their careers by providing
                        tools, resources, and connections that matter in the industry.
                    </p>
                </div>
            </div>

            <div class="feature">
                <img src="/project-images/designers.svg" alt="Excellence" class="feature-icon" />
                <div class="feature-text">
                    <h3>Creative Excellence</h3>
                    <p>
                        We maintain high standards for portfolio quality and presentation, 
                        ensuring our platform showcases the best in graphic design.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="about-cta">
    <div class="about-cta__content">
        <h2>Ready to Join Our Community?</h2>
        <p>Start showcasing your work and connecting with clients today.</p>
        <a href="/register" class="cta-button">
            Create Your Portfolio
            <span class="arrow">→</span>
        </a>
    </div>
</div>