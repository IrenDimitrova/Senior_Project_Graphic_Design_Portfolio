<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hive Portfolios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/hero.css" />
    <link rel="stylesheet" href="~/css/features.css" />
    <link rel="stylesheet" href="~/css/features-grid.css" />
    <link rel="stylesheet" href="~/css/showcase.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/about.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gallery.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/project-images/nav-logo.svg" alt="Hive Portfolios" class="nav-logo-img" />
            </a>
        </div>

        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index" class="@(ViewData["CurrentPage"]?.ToString() == "Home" ? "active" : "")">Home</a>
            <a asp-controller="About" asp-action="Index" class="@(ViewData["CurrentPage"]?.ToString() == "About" ? "active" : "")">About</a>
            <a asp-controller="Gallery" asp-action="Index" class="@(ViewData["CurrentPage"]?.ToString() == "Gallery" ? "active" : "")">Gallery</a>
        </div>

        <div class="nav-auth">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="dropdown">
                    <button class="user-dropdown-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/project-images/user-icon.svg" alt="User Menu" class="user-icon" />
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (User.IsInRole("Designer"))
                        {
                            <li><a class="dropdown-item" href="/Profile">My Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            <li><a class="dropdown-item" asp-controller="ProjectManagement" asp-action="Index">Manage Projects</a></li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                <a asp-controller="Account" asp-action="Register" class="btn-register">Register</a>
            }
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-column">
                <h3>Quick Links</h3>
                <nav class="footer-nav">
                    <a asp-controller="Home" asp-action="Index" class="footer-link">Home</a>
                    <a asp-controller="About" asp-action="Index" class="footer-link">About</a>
                    <a asp-controller="Gallery" asp-action="Index" class="footer-link">Gallery</a>
                    <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a>
                </nav>
            </div>

            <div class="footer-column">
                <h3>Categories</h3>
                <nav class="footer-nav">
                    <a asp-controller="Gallery" asp-action="Index" asp-route-category="print" class="footer-link">Print Design</a>
                    <a asp-controller="Gallery" asp-action="Index" asp-route-category="digital" class="footer-link">Digital Design</a>
                    <a asp-controller="Gallery" asp-action="Index" asp-route-category="branding" class="footer-link">Branding</a>
                    <a asp-controller="Gallery" asp-action="Index" asp-route-category="3d" class="footer-link">3D Design</a>
                </nav>
            </div>

            <div class="footer-column">
                <h3>Social Media</h3>
                <nav class="footer-nav social-links">
                    <a href="https://www.facebook.com/profile.php?id=100071125059145" class="social-link" target="_blank" rel="noopener noreferrer">
                        <img src="/project-images/facebook.svg" alt="Facebook">
                        <span>Iren Dimitrova</span>
                    </a>
                    <a href="https://www.instagram.com/irdimitrova/?hl=en" class="social-link" target="_blank" rel="noopener noreferrer">
                        <img src="/project-images/instagram.svg" alt="Instagram">
                        <span>irdimitrova</span>
                    </a>
                    <a href="https://www.linkedin.com/in/iren-dimitrova/" class="social-link" target="_blank" rel="noopener noreferrer">
                        <img src="/project-images/linkedin.svg" alt="LinkedIn">
                        <span>Iren Dimitrova</span>
                    </a>
                    <a href="https://www.behance.net/irendesigns" class="social-link" target="_blank" rel="noopener noreferrer">
                        <img src="/project-images/behance.svg" alt="Behance">
                        <span>irendesigns</span>
                    </a>
                </nav>
            </div>

            <div class="footer-column">
                <img src="/project-images/nav-logo.svg" alt="Hive Portfolios" class="footer-logo">
            </div>
        </div>

        <div class="footer-bottom">
            <p class="copyright">© 2024 - Graphic Design Portfolio</p>
            <p class="credits">Created by Iren Dimitrova</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    .rating {
        color: #ffd700;
        font-size: 24px;
        cursor: pointer;
        display: inline-block;
    }

    .rating-star {
        padding: 0 2px;
    }

        .rating-star:hover,
        .rating-star:hover ~ .rating-star {
            color: #ffc107;
        }

    .bi-star-fill {
        color: #ffd700;
    }

    .bi-star {
        color: #e4e5e9;
    }

    .project-card {
        transition: transform 0.2s;
    }

        .project-card:hover {
            transform: translateY(-5px);
        }
</style>