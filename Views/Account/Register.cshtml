@model Senior_Project_Graphic_Design_Portfolio.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-image: url('/project-images/about-numbers-background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
    }

    h2 {
        font-family: 'Tenby Five', sans-serif;
        color: #f3a849;
        font-size: 45px;
        
    }

    .custom-card {
        background-color: rgba(252, 253, 253, 0.95);
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-family: 'DM Sans', sans-serif;
        margin-top: 4rem;
        margin-bottom: 4rem;
    }

        .custom-card .card-header {
            background-color: transparent;
            border-bottom: 1px solid rgba(32, 54, 75, 0.1);
            padding: 1.5rem 1rem;
        }

    .form-label {
        color: #20364b;
        font-family: 'DM Sans', sans-serif;
        font-weight: bold;
    }

    .custom-btn-register {
        background-color: #f3a849;
        border: none;
        color: #fcfdfd;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .custom-btn-register:hover {
            background-color: #20364b;
            color: #f3a849;
        }

    .custom-link {
        color: #20364b;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .custom-link:hover {
            color: #f3a849;
        }

    .form-control:focus {
        border-color: #f3a849;
        box-shadow: 0 0 0 0.2rem rgba(243, 168, 73, 0.25);
    }

    .btn-check:checked + .btn-outline-primary {
        background-color: #20364b;
        border-color: #20364b;
        color: #fcfdfd;
    }

    .btn-outline-primary {
        color: #20364b;
        border-color: #20364b;
    }

        .btn-outline-primary:hover {
            background-color: #f3a849;
            border-color: #f3a849;
            color: #20364b;
        }

    .form-check-input:checked {
        background-color: #f3a849;
        border-color: #f3a849;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-card">
                <div class="card-header">
                    <h2 class="text-center">Create a New Account</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-controller="Account" asp-action="Register" method="post">
                        <div class="mb-4">
                            <label class="form-label d-block">Account Type</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="AccountType" id="designerRole" value="Designer" checked>
                                <label class="btn btn-outline-primary" for="designerRole">Designer</label>

                                <input type="radio" class="btn-check" name="AccountType" id="viewerRole" value="Viewer">
                                <label class="btn btn-outline-primary" for="viewerRole">Viewer</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div id="designerFields">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Website" class="form-label">Website (Optional)</label>
                                <input asp-for="Website" class="form-control" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Design Services</label>
                                <div class="form-check">
                                    <input asp-for="DoesPrintDesign" class="form-check-input" type="checkbox" />
                                    <label asp-for="DoesPrintDesign" class="form-check-label">Print Design</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="DoesBrandingDesign" class="form-check-input" type="checkbox" />
                                    <label asp-for="DoesBrandingDesign" class="form-check-label">Branding Design</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="DoesDigitalDesign" class="form-check-input" type="checkbox" />
                                    <label asp-for="DoesDigitalDesign" class="form-check-label">Digital Design</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="Does3dDesign" class="form-check-input" type="checkbox" />
                                    <label asp-for="Does3dDesign" class="form-check-label">3D Design</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Biography" class="form-label">Biography</label>
                                <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Biography" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn custom-btn-register w-100">Register</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Already have an account? <a asp-controller="Account" asp-action="Login" class="custom-link">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('input[name="AccountType"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const designerFields = document.getElementById('designerFields');
                designerFields.style.display = this.value === 'Designer' ? 'block' : 'none';
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}