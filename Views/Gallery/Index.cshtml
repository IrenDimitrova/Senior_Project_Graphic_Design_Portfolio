                        </div>
                        <div class="card-footer">
                            <a asp-action="Details"
                               asp-route-id="@project.ProjectId"
                               asp-route-projectType="3d"
                               class="btn btn-details">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
