@* Views/ProjectManagement/Create.cshtml *@
@model CreateProjectViewModel

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Create New Project</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="ProjectType" class="form-label">Project Type</label>
                            <select asp-for="ProjectType" class="form-select">
                                <option value="Print">Print Design</option>
                                <option value="Digital">Digital Design</option>
                                <option value="Branding">Branding</option>
                                <option value="3D">3D Design</option>
                            </select>
                            <span asp-validation-for="ProjectType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProjectName" class="form-label">Project Name</label>
                            <input asp-for="ProjectName" class="form-control" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProjectImage" class="form-label">Project Image</label>
                            <input asp-for="ProjectImage" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ProjectImage" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Project</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}