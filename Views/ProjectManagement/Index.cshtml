@model ProjectManagementViewModel

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Projects</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add New Project
        </a>
    </div>

    <div class="row">
        @* Print Projects *@
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Print Projects</h5>
                </div>
                <div class="card-body">
                    @if (!Model.PrintProjects.Any())
                    {
                        <p class="text-muted">No print projects yet.</p>
                    }
                    @foreach (var project in Model.PrintProjects)
                    {
                        <div class="project-item d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6>@project.ProjectName</h6>
                                <small class="text-muted">@project.CreationDate.ToShortDateString()</small>
                            </div>
                            <div>
                                <a asp-action="Edit"
                               asp-route-id="@project.ProjectID"
                               asp-route-projectType="Print"
                                   class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@project.ProjectID" />
                                    <input type="hidden" name="projectType" value="Print" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this project?')">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

